{
	"name": "command-line-music",
	"version": "0.0.0",
	"description": "iPod-shuffle style audio player for the command line",
	"keywords": ["music", "audio", "player", "cli", "command-line", "terminal"],
	"license": "MIT",
	"bin": {
		"clm": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist",
		"music"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/markkaylor/command-line-music.git"
	},
	"homepage": "https://github.com/markkaylor/command-line-music#readme",
	"author": "Mark Kaylor",
	"dependencies": {
		"ink": "^4.1.0",
		"ink-select-input": "^6.0.0",
		"meow": "^11.0.0",
		"play-sound": "^1.1.6",
		"react": "^18.2.0",
		"tree-kill": "^1.2.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/node": "^22.10.1",
		"@types/play-sound": "^1.1.2",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
